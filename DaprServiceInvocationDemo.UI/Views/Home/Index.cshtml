@model DaprServiceInvocationDemo.DomainModels.WeatherForecastModel[]
@{
    ViewData["Title"] = "Weather";
}

<div class="text-center">
    <h1 class="display-4">Weather Forecast</h1>
    
    <table width="100%">
        <thead>
        <tr>
            <th>Date</th>
            <th>Temp C</th>
            <th>Temp F</th>
            <th>Summary</th>
        </tr>
        </thead>
        <tbody>
        
        @foreach(var thisWeather in this.Model)
        {
            <tr>
                <td>@thisWeather.Date.ToShortDateString()</td>
                <td>@thisWeather.TemperatureC</td>
                <td>@thisWeather.TemperatureF</td>
                <td>@thisWeather.Summary</td>
            </tr>
        }
        </tbody>
    </table>
</div>